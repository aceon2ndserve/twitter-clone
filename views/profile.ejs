<!DOCTYPE html>
<html>
<head>
  <title>User Profile</title>
  <a href="/users/logout">Logout</a>

</head>
<body>
  
  <h1><%=username%> Profile</h1>
<h1>Your tweets:</h1>
<ul>
  <% tweets.forEach((tweet) => { %>
    <li><%= tweet.text %></li>
    <form method="POST" action="/tweets/<%= tweet.id %>?_method=DELETE">
      <input type="hidden" name="_method" value="DELETE">
      <button type="submit">Delete Tweet</button>
    </form>
  <% }); %>
</ul>
<h1> Other users to follow</h1>
<ul>
  <% users.forEach((user) => { %>
    <li>
      <span><%= user.username %></span>
      <!-- Check if the current user is following this user -->
      <% if (followingUserIds.includes(user.id.toString())) { %>
        <form method="POST" action="/users/unfollow/<%= user.id %>">
          <button type="submit">Unfollow</button>
        </form>
      <% } else { %>
        <form method="POST" action="/users/follow/<%= user.id %>">
          <button type="submit">Follow</button>
        </form>
      <% } %>
    </li>
  <% }); %>
</ul>

<form action="/tweets/newtweet" method="POST">
  <input name="text" placeholder="New Tweet">
  <button type="submit">Tweet</button>
</form>
